{% extends 'base.html.twig' %}

{% block title %}Synfony Cin√©!{% endblock %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
{% endblock %}
{% block body %}
<div class="container">
    <form method="POST" action="{{ path('app_home') }}">
        <div class="mb-3">
            <input type="text" class="form-control" name="searchTerm" placeholder="Rechercher un film...">
        </div>
        <button class="btn btn-primary" type="submit">Rechercher</button>
    </form>
    <div class="row">
        {% for movieList in movieList %}
        <div class="card" style="width: 18rem;">
            <img src="https://www.themoviedb.org/t/p/w220_and_h330_face/{{movieList.poster_path}}" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">{{movieList.title}}</h5>
                <p class="card-text">{{movieList.overview}}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
